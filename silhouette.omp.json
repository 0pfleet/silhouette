{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#26C6DA",
          "template": "{{ if .WSL }}WSL {{ end }}{{ .Icon }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#66BB6A",
          "properties": {
            "style": "full"
          },
          "template": "{{ .Path }} "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#FFB300",
          "properties": {
            "branch_icon": "",
            "fetch_status": true
          },
          "template": "{{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }} "
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#AB47BC",
          "properties": {
            "threshold": 500,
            "style": "austin"
          },
          "template": "{{ .FormattedMs }} "
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#EF5350",
          "foreground_templates": [
            "{{ if eq .Code 0 }}#66BB6A{{ end }}"
          ],
          "template": "{{ if ne .Code 0 }}✗{{ else }}✓{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#78909C",
          "template": "❯ "
        }
      ]
    }
  ]
}
